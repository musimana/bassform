<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         colors="true"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false"
         cacheDirectory=".phpunit.cache"
         backupStaticProperties="false">
    <testsuites>
        <testsuite name="Navigation">
            <directory suffix="Test.php">./tests/Browser/TestNavigation</directory>
        </testsuite>
        <testsuite name="Auth">
            <directory suffix="Test.php">./tests/Browser/TestAuth</directory>
        </testsuite>
        <testsuite name="Content">
            <directory suffix="Test.php">./tests/Browser/TestContent</directory>
        </testsuite>
    </testsuites>
</phpunit>
